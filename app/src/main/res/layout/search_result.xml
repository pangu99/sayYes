<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#DD9BE8"
        android:text="TextView"
        android:textColor="#070707"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/search_img"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_below="@+id/search_title"
        android:layout_alignStart="@+id/search_title"
        tools:srcCompat="@tools:sample/avatars" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="37dp"
        android:layout_below="@+id/search_img"
        android:layout_alignStart="@+id/search_img"
        android:layout_marginStart="355dp"
        android:layout_marginTop="18dp"
        android:background="#EF0E0E"
        app:srcCompat="@drawable/ic_baseline_thumb_up_24" />

    <TextView
        android:id="@+id/search_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:text="123"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_hash"
        android:layout_width="352dp"
        android:layout_height="84dp"
        android:layout_below="@+id/search_img"
        android:layout_alignStart="@+id/search_img"
        android:background="#7BB8E8"
        android:text="###"
        android:textColor="#0C0C0C"
        android:textSize="20sp" />

</RelativeLayout>